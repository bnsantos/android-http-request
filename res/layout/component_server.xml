<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/componentServerLayout" android:padding="5dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:id="@+id/componentServerName" android:singleLine="false" android:layout_weight="1"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/componentServerRemoveBtn" android:background="@drawable/remove"/>
</LinearLayout>