<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/componentFieldLayout" android:padding="5dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_request_field_name"
            android:id="@+id/componentFieldName" android:singleLine="false" android:layout_weight="1"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/componentFieldValue" android:hint="@string/config_request_field_value"
            android:layout_weight="1"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/componentFieldRemoveBtn" android:background="@drawable/remove"/>
</LinearLayout>